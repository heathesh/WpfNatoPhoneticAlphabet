<Window x:Class="MobileDevCoZa.NatoPhoneticAlphabet.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobileDevCoZa.NatoPhoneticAlphabet.UI"
        mc:Ignorable="d"
        Title="NATO Phonetic Alphabet" Height="350" Width="525">
    <Grid x:Name="LayoutRoot">
        <Label x:Name="labelText" Content="Text" HorizontalAlignment="Left" Margin="19,13,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxCapturedText" HorizontalAlignment="Left" Height="23" Margin="84,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Text="{Binding CapturedText}" TextChanged="TextBoxCapturedText_OnTextChanged" />
        <Label x:Name="labelResult" Content="Result:" HorizontalAlignment="Left" Margin="19,57,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxResult" HorizontalAlignment="Left" Height="209" Margin="84,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" IsReadOnly="True" Text="{Binding Result}" MouseDoubleClick="TextBoxResult_OnMouseDoubleClick" />
        <Button x:Name="buttonExit" Content="Exit" HorizontalAlignment="Left" Margin="409,283,0,0" VerticalAlignment="Top" Width="75" Click="buttonExit_Click"/>
    </Grid>
</Window>
